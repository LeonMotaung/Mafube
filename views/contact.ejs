<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - Mafube Local Municipality</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-wrap justify-between items-center h-auto py-3">
                <div class="flex items-center w-full md:w-auto justify-between">
                    <div class="flex items-center">
                        <img src="/images/Mafube.png" alt="Mafube Logo" class="h-8 sm:h-12 w-auto mr-2 sm:mr-3">
                        <h1 class="text-lg sm:text-2xl font-bold text-green-600">Mafube Municipality</h1>
                    </div>
                    <button type="button" onclick="toggleMenu()" class="md:hidden p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path id="menuIcon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

                <!-- Mobile-optimized menu -->
                <div id="mobileMenu" class="hidden md:flex w-full md:w-auto flex-col md:flex-row items-start md:items-center space-y-2 md:space-y-0 mt-3 md:mt-0">
                    <div class="flex flex-col md:flex-row w-full md:w-auto space-y-2 md:space-y-0">
                        <a href="/" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Home</a>
                        <a href="/about" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">About</a>
                        <a href="/services" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Services</a>
                        <a href="/projects" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Projects</a>
                        <a href="/contact" class="text-green-600 font-medium px-3 py-2 rounded hover:bg-gray-100">Contact</a>
                    </div>
                    <div class="flex flex-col md:flex-row w-full md:w-auto space-y-2 md:space-y-0 mt-2 md:mt-0">
                        <% if (user && user.name) { %>
                            <span class="px-3 py-2 text-sm">Welcome, <%= user.name %></span>
                            <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 text-center">Logout</a>
                        <% } else { %>
                            <a href="/login" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 text-center md:mx-2">Login</a>
                            <a href="/signup" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 text-center">Sign Up</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8">
            <!-- Contact Information -->
            <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8 order-2 lg:order-1">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h2>
                
                <!-- Main Office -->
                <div class="mb-6 sm:mb-8">
                    <h3 class="text-lg font-semibold text-green-600 mb-4">Main Office</h3>
                    <ul class="space-y-4">
                        <li class="flex items-start sm:items-center">
                            <svg class="h-5 w-5 text-green-500 mr-3 mt-0.5 sm:mt-0 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <span class="text-gray-600">64 Church Street, Frankfort</span>
                        </li>
                        <li class="flex items-center">
                            <svg class="h-5 w-5 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            <a href="tel:+27588131051" class="text-gray-600 hover:text-green-600">(058) 813 1051</a>
                        </li>
                        <li class="flex items-center">
                            <svg class="h-5 w-5 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <a href="mailto:info@mafube.gov.za" class="text-gray-600 hover:text-green-600">info@mafube.gov.za</a>
                        </li>
                    </ul>
                </div>

                <!-- Emergency Numbers -->
                <div class="mb-6 sm:mb-8">
                    <h3 class="text-lg font-semibold text-green-600 mb-4">Emergency Numbers</h3>
                    <ul class="space-y-4">
                        <li class="flex items-center">
                            <svg class="h-5 w-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                            </svg>
                            <span class="text-gray-600">Emergency: <a href="tel:10111" class="hover:text-green-600">10111</a></span>
                        </li>
                        <li class="flex items-center">
                            <svg class="h-5 w-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                            <span class="text-gray-600">Electricity: <a href="tel:+27588131588" class="hover:text-green-600">(058) 813 1588</a></span>
                        </li>
                    </ul>
                </div>

                <!-- Operating Hours -->
                <div>
                    <h3 class="text-lg font-semibold text-green-600 mb-4">Operating Hours</h3>
                    <ul class="space-y-2 text-gray-600">
                        <li class="flex items-center">
                            <svg class="h-5 w-5 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span>Monday - Friday: 07:30 - 16:00</span>
                        </li>
                        <li class="flex items-center">
                            <svg class="h-5 w-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span>Saturday - Sunday: Closed</span>
                        </li>
                        <li class="flex items-center">
                            <svg class="h-5 w-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span>Public Holidays: Closed</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8 order-1 lg:order-2">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Send us a Message</h2>
                
                <!-- Alert Messages -->
                <% if (locals.success || locals.error) { %>
                    <div class="mb-6">
                        <% if (locals.success) { %>
                            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4" role="alert">
                                <%= success %>
                            </div>
                        <% } %>
                        <% if (locals.error) { %>
                            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
                                <%= error %>
                            </div>
                        <% } %>
                    </div>
                <% } %>

                <!-- Form -->
                <form action="/contact" method="POST" class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                        <input 
                            type="text" 
                            id="name"
                            name="name" 
                            required 
                            class="w-full px-4 py-2 rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 transition-colors"
                            placeholder="Enter your full name"
                        >
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input 
                            type="email" 
                            id="email"
                            name="email" 
                            required 
                            class="w-full px-4 py-2 rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 transition-colors"
                            placeholder="Enter your email address"
                        >
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                        <textarea 
                            id="message"
                            name="message" 
                            rows="4" 
                            required 
                            class="w-full px-4 py-2 rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 transition-colors"
                            placeholder="How can we help you?"
                        ></textarea>
                    </div>

                    <button 
                        type="submit" 
                        class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors"
                    >
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Script -->
    <script>
        function toggleMenu() {
            const menu = document.getElementById('mobileMenu');
            const menuIcon = document.getElementById('menuIcon');
            
            menu.classList.toggle('hidden');
            
            // Animate menu icon
            if (menu.classList.contains('hidden')) {
                menuIcon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            } else {
                menuIcon.setAttribute('d', 'M6 18L18 6M6 6l12 12');
            }
        }

        // Close mobile menu on window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) { // md breakpoint
                document.getElementById('mobileMenu').classList.add('hidden');
                document.getElementById('menuIcon').setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            }
        });
    </script>
</body>
</html>