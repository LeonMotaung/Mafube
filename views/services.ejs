        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a></li>
                        <li><a href="/gallery" class="text-gray-300 hover:text-white transition-colors">Gallery</a></li>
                        <li><a href="/services" class="text-gray-300 hover:text-white transition-colors">Services</a></li>
                        <li><a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact Us</a></li>
                        <li><a href="/about" class="text-gray-300 hover:text-white transition-colors">About Us</a></li>
                    </ul>
                </div>
    
                <!-- Local Schools -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Local Schools</h4>
                    <ul class="space-y-2">
                        <li>
                            <a href="https://www.education.gov.za/Mfundo-Thuto" 
                               target="_blank" 
                               class="text-gray-300 hover:text-white transition-colors">
                                Mfundo Thuto SS
                            </a>
                        </li>
                        <li>
                            <a href="https://www.education.gov.za/Falesizwe" 
                               target="_blank" 
