<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Mafube Municipality</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-wrap justify-between items-center h-auto py-3">
                <!-- Logo and Title -->
                <div class="flex items-center w-full md:w-auto justify-between">
                    <a href="/" class="flex items-center space-x-2">
                        <img src="/images/Mafube.png" alt="Mafube Logo" class="h-8 sm:h-12 w-auto">
                        <h1 class="text-lg sm:text-2xl font-bold text-green-600">Mafube Municipality</h1>
                    </a>
                    <button 
                        type="button" 
                        onclick="toggleMenu()" 
                        class="md:hidden p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100"
                        aria-label="Toggle menu"
                    >
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path id="menuIcon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

                <!-- Mobile Menu -->
                <div id="mobileMenu" class="hidden md:flex w-full md:w-auto flex-col md:flex-row items-start md:items-center space-y-2 md:space-y-0 mt-4 md:mt-0">
                    <!-- Main Navigation -->
                    <div class="flex flex-col md:flex-row w-full md:w-auto space-y-2 md:space-y-0">
                        <a href="/" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Home</a>
                        <a href="/about" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">About</a>
                        <a href="/services" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Services</a>
                        <a href="/projects" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Projects</a>
                        <a href="/contact" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Contact</a>
                    </div>

                    <!-- Town Links -->
                    <div class="flex flex-col md:flex-row w-full md:w-auto space-y-2 md:space-y-0 md:ml-4 border-t md:border-t-0 pt-2 md:pt-0">
                        <a href="/frankfort" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Frankfort</a>
                        <a href="/villiers" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Villiers</a>
                        <a href="/cornelia" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Cornelia</a>
                        <a href="/tweeling" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Tweeling</a>
                    </div>

                    <!-- Auth Links -->
                    <div class="flex flex-col md:flex-row w-full md:w-auto space-y-2 md:space-y-0 md:ml-4 border-t md:border-t-0 pt-2 md:pt-0">
                        <a href="/login" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 text-center w-full md:w-auto">Login</a>
                        <a href="/signup" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 text-center w-full md:w-auto md:ml-2">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Login Form Section -->
    <div class="flex-grow flex items-center justify-center px-4 sm:px-6 lg:px-8 py-12">
        <div class="max-w-md w-full bg-white rounded-lg shadow-md p-8">
            <!-- Logo Section -->
            <div class="flex flex-col items-center mb-8">
                <img src="/images/Mafube.png" alt="Mafube Logo" class="h-20 w-auto mb-4">
                <h2 class="text-2xl sm:text-3xl font-bold text-green-600">Welcome Back</h2>
                <p class="text-gray-600 mt-2 text-center">Please login to your account</p>
            </div>

            <% if (error) { %>
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
                    <%= error %>
                </div>
            <% } %>

            <form action="/login" method="POST" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700">ID Number</label>
                    <input 
                        type="text" 
                        name="idNumber" 
                        required 
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 px-3 py-2"
                        placeholder="Enter your ID number"
                    >
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Password</label>
                    <input 
                        type="password" 
                        name="password" 
                        required 
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 px-3 py-2"
                        placeholder="Enter your password"
                    >
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input 
                            type="checkbox" 
                            id="remember" 
                            name="remember" 
                            class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"
                        >
                        <label for="remember" class="ml-2 block text-sm text-gray-700">
                            Remember me
                        </label>
                    </div>
                    <a href="/forgot-password" class="text-sm font-medium text-gray-400 cursor-not-allowed pointer-events-none">
                        Forgot password?
                    </a>
                    
                    <!--<a href="/forgot-password" disabled class="text-sm font-medium text-green-600 hover:text-green-500">
                        Forgot password?
                    </a>-->
                </div>

                <button 
                    type="submit" 
                    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
                >
                    Sign in
                </button>
            </form>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">
                            New to Mafube Municipality?
                        </span>
                    </div>
                </div>

                <div class="mt-6">
                    <a 
                        href="/signup" 
                        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-green-600 bg-white hover:bg-gray-50 border-green-600"
                    >
                        Create new account
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="/services" class="text-gray-300 hover:text-white transition-colors">Services</a></li>
                        <li><a href="/projects" class="text-gray-300 hover:text-white transition-colors">Projects</a></li>
                        <li><a href="/news" class="text-gray-300 hover:text-white transition-colors">News</a></li>
                        <li><a href="/careers" class="text-gray-300 hover:text-white transition-colors">Careers</a></li>
                    </ul>
                </div>

                <!-- Towns -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Our Towns</h4>
                    <ul class="space-y-2">
                        <li><a href="/frankfort" class="text-gray-300 hover:text-white transition-colors">Frankfort</a></li>
                        <li><a href="/villiers" class="text-gray-300 hover:text-white transition-colors">Villiers</a></li>
                        <li><a href="/cornelia" class="text-gray-300 hover:text-white transition-colors">Cornelia</a></li>
                        <li><a href="/tweeling" class="text-gray-300 hover:text-white transition-colors">Tweeling</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
                    <ul class="space-y-2">
                        <li class="flex items-center">
                            <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <span class="text-gray-300">64 Church Street, Frankfort</span>
                        </li>
                        <li class="flex items-center">
                            <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <a href="mailto:info@mafube.gov.za" class="text-gray-300 hover:text-white transition-colors">info@mafube.gov.za</a>
                        </li>
                        <li class="flex items-center">
                            <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            <a href="tel:+27588131051" class="text-gray-300 hover:text-white transition-colors">(058) 813 1051</a>
                        </li>
                    </ul>
                </div>

                <!-- Social Media -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Follow Us</h4>
                    <div class="flex space-x-4">
                        <a href="https://facebook.com/MafubeMunicipality" target="_blank" class="text-gray-300 hover:text-white transition-colors">
                            <span class="sr-only">Facebook</span>
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                        <a href="https://twitter.com/MafubeMuni" target="_blank" class="text-gray-300 hover:text-white transition-colors">
                            <span class="sr-only">Twitter</span>
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                        </a>
                        <a href="https://instagram.com/MafubeMunicipality" target="_blank" class="text-gray-300 hover:text-white transition-colors">
                            <span class="sr-only">Instagram</span>
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; <%= new Date().getFullYear() %> Mafube Local Municipality. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        function toggleMenu() {
            const menu = document.getElementById('mobileMenu');
            const menuIcon = document.getElementById('menuIcon');
            
            menu.classList.toggle('hidden');
            
            if (menu.classList.contains('hidden')) {
                menuIcon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            } else {
                menuIcon.setAttribute('d', 'M6 18L18 6M6 6l12 12');
            }
        }

        // Close mobile menu on window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) {
                document.getElementById('mobileMenu').classList.add('hidden');
                document.getElementById('menuIcon').setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            const menu = document.getElementById('mobileMenu');
            const menuButton = document.querySelector('button[onclick="toggleMenu()"]');
            
            if (!menu.contains(e.target) && !menuButton.contains(e.target) && !menu.classList.contains('hidden')) {
                toggleMenu();
            }
        });
    </script>
</body>
</html>