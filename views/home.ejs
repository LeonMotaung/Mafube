<div class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Latest News</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% if (typeof news !== 'undefined' && news && news.length > 0) { %>
                <% news.forEach(function(item) { %>
                    <article class="bg-white rounded-lg shadow">
                        <% if (item && item.image) { %>
                            <img src="<%= item.image %>" alt="News image" class="w-full h-48 object-cover rounded-t-lg">
                        <% } else { %>
                            <div class="w-full h-48 bg-gray-200 rounded-t-lg flex items-center justify-center">
                                <span class="text-gray-400">No image available</span>
                            </div>
                        <% } %>
                        <div class="p-6">
                            <h3 class="text-xl font-semibold mb-2">
                                <%= item && item.user ? `${item.user.name} ${item.user.surname}` : 'Anonymous' %>
                            </h3>
                            <p class="text-gray-600">
                                <%= item && item.content ? item.content.substring(0, 150) + '...' : 'No content available' %>
                            </p>
                            <div class="mt-4 flex justify-between items-center">
                                <a href="/town/<%= item && item.town ? item.town.toLowerCase() : '#' %>" 
                                   class="text-green-600 hover:text-green-700">
                                    Read more â†’
                                </a>
                                <span class="text-sm text-gray-500">
                                    <%= item && item.createdAt ? new Date(item.createdAt).toLocaleDateString() : 'Date not available' %>
                                </span>
                            </div>
                        </div>
                    </article>
                <% }); %>
            <% } else { %>
                <div class="col-span-3 text-center py-8 text-gray-500">
                    <p>No news items available at the moment.</p>
                </div>
            <% } %>
        </div>
    </div>
