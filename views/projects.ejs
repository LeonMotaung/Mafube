<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects - Mafube Local Municipality</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-wrap justify-between items-center h-auto py-3">
                <div class="flex items-center w-full md:w-auto justify-between">
                    <a href="/" class="flex items-center space-x-2">
                        <img src="/images/Mafube.png" alt="Mafube Logo" class="h-8 sm:h-12 w-auto">
                        <h1 class="text-lg sm:text-2xl font-bold text-green-600">Mafube Municipality</h1>
                    </a>
                    <button 
                        type="button" 
                        onclick="toggleMenu()" 
                        class="md:hidden p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-green-500"
                        aria-expanded="false"
                    >
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path id="menuIcon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

                <div id="mobileMenu" class="hidden md:flex w-full md:w-auto flex-col md:flex-row items-start md:items-center space-y-2 md:space-y-0 mt-3 md:mt-0">
                    <div class="flex flex-col md:flex-row w-full md:w-auto space-y-2 md:space-y-0">
                        <a href="/" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Home</a>
                        <a href="/about" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">About</a>
                        <a href="/services" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Services</a>
                        <a href="/projects" class="text-green-600 font-medium px-3 py-2 rounded bg-gray-100">Projects</a>
                        <a href="/contact" class="text-gray-600 hover:text-green-600 px-3 py-2 rounded hover:bg-gray-100">Contact</a>
                    </div>
                    <div class="flex flex-col md:flex-row w-full md:w-auto space-y-2 md:space-y-0 mt-2 md:mt-0">
                        <% if (user && user.name) { %>
                            <span class="px-3 py-2 text-sm text-gray-600">Welcome, <%= user.name %></span>
                            <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition-colors text-center">Logout</a>
                        <% } else { %>
                            <a href="/login" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition-colors text-center md:mx-2">Login</a>
                            <a href="/signup" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors text-center">Sign Up</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="relative bg-green-600 py-12 sm:py-16">
        <div class="absolute inset-0">
            <img 
                src="/images/Mafube.png" 
                alt="Municipal Projects Background" 
                class="w-full h-full object-cover opacity-25"
                loading="lazy"
            >
        </div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">Municipal Projects</h1>
            <p class="text-lg sm:text-xl text-white opacity-90">Building a better future for our communities</p>
        </div>
    </div>

    <!-- Projects Grid -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            <!-- Infrastructure Projects Card -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105">
                <img 
                    src="/images/road.jpg" 
                    alt="Infrastructure Projects" 
                    class="w-full h-48 object-cover"
                    loading="lazy"
                >
                <div class="p-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Infrastructure Development</h2>
                    <ul class="space-y-3 text-gray-600">
                        <li class="flex items-start">
                            <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span>Road maintenance and repairs</span>
                        </li>
                        <!-- Add more list items as needed -->
                    </ul>
                    <a href="/projects/infrastructure" class="mt-4 inline-block px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors">
                        Learn More
                    </a>
                </div>
            </div>

            <!-- Housing Projects Card -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105">
                <!-- Similar structure to Infrastructure card -->
            </div>

            <!-- Community Projects Card -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105">
                <!-- Similar structure to Infrastructure card -->
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Footer content similar to previous version but with improved mobile layout -->
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; <%= new Date().getFullYear() %> Mafube Local Municipality. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        function toggleMenu() {
            const menu = document.getElementById('mobileMenu');
            const menuIcon = document.getElementById('menuIcon');
            
            menu.classList.toggle('hidden');
            
            // Animate menu icon
            if (menu.classList.contains('hidden')) {
                menuIcon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            } else {
                menuIcon.setAttribute('d', 'M6 18L18 6M6 6l12 12');
            }
        }

        // Close mobile menu on window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) {
                document.getElementById('mobileMenu').classList.add('hidden');
                document.getElementById('menuIcon').setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            const menu = document.getElementById('mobileMenu');
            const menuButton = document.querySelector('button[onclick="toggleMenu()"]');
            
            if (!menu.contains(e.target) && !menuButton.contains(e.target) && !menu.classList.contains('hidden')) {
                toggleMenu();
            }
        });
    </script>
</body>
</html>